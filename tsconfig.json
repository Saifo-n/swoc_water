{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // ข้ามการตรวจสอบไฟล์ lib
    "strict": false, // ปิดการตรวจสอบข้อผิดพลาดที่เข้มงวด
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmitOnError": false, // ไม่หยุดการ build เมื่อพบข้อผิดพลาด
    "noUnusedLocals": false, // ไม่แจ้งเตือนการใช้งานตัวแปรที่ไม่ได้ใช้
    "noUnusedParameters": false, // ไม่แจ้งเตือนการใช้พารามิเตอร์ที่ไม่ได้ใช้

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
